<root>
  <Implements>
    <Interface>	GameObject		</Interface>
    <Interface>	State			</Interface>
    <Interface>	Motion			</Interface>
    <Interface>	SkillBox		</Interface>
    <Interface>	Combat			</Interface>
    <Interface>	Spell			</Interface>
    <Interface>	Teleport		</Interface>
    <Interface>	AvatarPropertys	        </Interface>
    <Interface>	Dialog			</Interface>

  </Implements>

  <Properties>
    <roleType>
      <Type> UINT8 </Type>
      <Flags> BASE </Flags>
      <Persistent> true </Persistent>
    </roleType>
    <roleTypeCell>
      <Type> UINT8 </Type>
      <Flags> ALL_CLIENTS </Flags>
      <Persistent> true </Persistent>
    </roleTypeCell>
    <level>
      <Type> UINT16 </Type>
      <Flags> CELL_PUBLIC_AND_OWN </Flags>
      <Persistent> true </Persistent>
    </level>
    <itemList>
      <Type> ITEM_INFO_LIST </Type>
      <Flags> BASE_AND_CLIENT </Flags>
      <Persistent> true </Persistent>
    </itemList>
    <equipItemList>
      <Type> ITEM_INFO_LIST </Type>
      <Flags> BASE_AND_CLIENT </Flags>
      <Persistent> true </Persistent>
    </equipItemList>
    <equipWeapon>
      <Type> INT32 </Type>
      <Flags> ALL_CLIENTS </Flags>
      <Persistent> true </Persistent>
      <Default>		-1	</Default>
    </equipWeapon>
  </Properties>

	<ClientMethods>
        <onReqAvatarList>
            <Arg>   AVATAR_INFO_LIST   </Arg>
        </onReqAvatarList>

        <onCreateAvatarResult>
           <Arg>UINT8</Arg>
           <Arg>AVATAR_INFO</Arg>
        </onCreateAvatarResult>

        <onRemoveAvatar>
            <Arg>   DBID        </Arg>
        </onRemoveAvatar>
    <on_req_match>
      <Arg>   UNICODE  </Arg>
    </on_req_match>
	</ClientMethods>

	<BaseMethods>
    <req_match>
      <Exposed/>
    </req_match>
        <reqAvatarList>
            <Exposed/>
        </reqAvatarList>
        <reqCreateAvatar>
        	<Arg>UNICODE</Arg>
            <Arg>UINT8</Arg>
            <Exposed/>
        </reqCreateAvatar>
        <reqRemoveAvatar>
            <Exposed/>
            <Arg>   UNICODE </Arg>  <!-- name --> 
        </reqRemoveAvatar>
        <selectAvatarGame>
            <Exposed/>
            <Arg>   DBID    </Arg>  <!-- dbid -->
        </selectAvatarGame>
	</BaseMethods>

	<CellMethods>
	</CellMethods>

</root>
